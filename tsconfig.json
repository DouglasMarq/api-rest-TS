{
    "compilerOptions": {
      "strict": true,
      "target": "es2017",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "typeRoots": [
        "node_modules/@types",
        "@types"
      ],
      "types": [
        "node",
        "reflect-metadata"
      ],
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "noFallthroughCasesInSwitch": true,
      "lib": ["es2017"]
    },
    "exclude": [
      "node_modules",
      "**/__test__/*"
    ],
    "file": [
      "./module.d.ts"
    ]
  }